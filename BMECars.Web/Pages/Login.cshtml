@page
@model BMECars.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div>
    <form method="post" style="margin: 0 auto; width: 60%; padding: 30px 0px;">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
        </div>
        <div class="form-check">
            <input asp-for="Input.KeepMeSignedIn" class="form-check-input" />
            <label asp-for="Input.KeepMeSignedIn"></label>
        </div>
        <a asp-page="/Register">Register</a>
        <div class="form-group">
            <button style="float: right;" type="submit" class="btn btn-success">Sign in</button>
            <div class="clearfix"></div>
        </div>
    </form>
</div>


